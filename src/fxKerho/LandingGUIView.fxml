                        <Insets bottom="20.0" right="30.0" top="20.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <ButtonBar prefHeight="40.0" prefWidth="200.0">
              <buttons>
                <Button defaultButton="true" focusTraversable="false" mnemonicParsing="false" onAction="#handleOK" text="OK" />
