   <center>
      <VBox alignment="CENTER" styleClass="vaaleaVihrea" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="TOP_CENTER" maxWidth="1.7976931348623157E308" text="GOLFKERHO">
               <font>
                  <Font name="Garamond" size="24.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="20.0" left="10.0" right="10.0" top="10.0" />
               </padding></Label>
            <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="Versio 2.0">
               <font>
                  <Font name="Arial" size="14.0" />
               </font></Label>
            <Label alignment="BOTTOM_CENTER" maxWidth="1.7976931348623157E308" prefHeight="40.0" text="Miia Arkko">
               <font>
                  <Font name="Arial" size="20.0" />
               </font></Label>
         </children>
      </VBox>
   </center>
   <bottom>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox>
               <children>
                  <Label text="Anna golferhon nimi">
